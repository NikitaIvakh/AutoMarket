<h1>All cars</h1>
<h3>@Model.CurrCategory</h3>
<div class="row mt-5 mb-2">
    @{
        foreach (Car car in Model.AllCars)
        {
            <div class="col-lg-4">
                <img class="img-thumbnail" src="@car.Image" alt="@car.Name" />
                <h2>Model: @car.Name</h2>
                <p>@car.ShortDescription</p>
                <p>Price: @car.Price.ToString() $</p>
                <p>
                    <a class="btn btn-warning" href="#">More detailed</a>
                </p>
            </div>
        }
    }
</div>